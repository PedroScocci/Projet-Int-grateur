<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scoccipe.projetphysique.MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nameProject"
            android:textColor="@color/noir"
            android:textSize="32sp"
            android:gravity="center"/>

        <Button android:id="@+id/Gravite"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/gravite"/>

        <Button android:id="@+id/ForceCentripete"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/forceCentripete"/>

        <Button android:id="@+id/Paradoxe"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/paradoxeJumeaux"/>

        <Button android:id="@+id/Onde"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/ondesStationnaires"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
