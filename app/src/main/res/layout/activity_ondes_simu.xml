<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scoccipe.projetphysique.OndesSimu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ondesSimuTitre"
            android:textSize="26sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/cordeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ondesSimuModeStatio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ondesSimuModeStatio"
                    android:textColor="@color/noir"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/ondesSimuVentres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ondesSimuNbVentres"
                    android:textColor="@color/noir"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/ondesSimuOuverture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/noir"
                    android:text="@string/ondesSimuOuverture"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/ondesSimuProb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/noir"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bOndesSimu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ondesSimuButton"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
